<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/antiBurnLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/antiBurnAnimationGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/antiBurnLabel"
            android:text="Label"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDisplayText"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtAntiBurnMetric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="@string/zero"
            android:textSize="125dp"
            android:maxLines="1"
            android:textColor="@color/colorDisplayText"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="50dp"
            app:autoSizeMaxTextSize="180dp"
            app:autoSizeStepGranularity="2sp"/>

        <TextView
            android:id="@+id/antiBurnMetricUnit"
            android:text="@string/w_inline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorDisplayText"
            android:textSize="40dp"
            android:includeFontPadding="false"
            android:importantForAccessibility="no" />

    </LinearLayout>

</LinearLayout>